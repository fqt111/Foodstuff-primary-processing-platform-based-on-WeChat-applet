/* pages/user/user.wxss */

.root-view {
  display: flex;
  flex: 1;
  height: 100%;
  width: 100%;
  flex-direction: column;
  background-color: #F5F5F5
}

.root-view-tilte {
  display: flex;
  width: 100%;
  height: 22%;
  border-bottom: 30rpx solid #F5F5F5;
  background-color: #FFF
}

.userinfo {
  display: flex;
  flex: 1;
  width: 100%;
  height: 100%;
  align-items: center;
}

.block-view {
  display: flex;
  flex: 1;
  align-items: center;
}

.userinfo-avatar {
  width: 160rpx;
  height: 160rpx;
  margin: 40rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: black;
}

.setting-for {
  display: flex;
  flex: 1;
  flex-direction: column;
}

.setting-item-view {
  display: flex;
  height: 100rpx;
  flex-direction:column;
   background-color: #FFF;
}

.setting-item {
  display: flex;
  height: 100%;
  flex-direction: row;
  align-items: center;
  margin-left: 50rpx;
  margin-right: 50rpx;
  justify-content: space-between;
  border-bottom: 3rpx solid #F5F5F5;
}

.empty-block {
  display: flex;
  height: 30rpx;
  width: 100%;
  background-color: #F5F5F5;
}
