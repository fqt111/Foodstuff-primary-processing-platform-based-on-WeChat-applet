/* pages/order/order.wxss */

.decor-view {
  display: flex;
  flex: 1;
  width: 100%;
  height: 100%;
  flex-direction: column;
}

.swiper-tab {
  display: flex;
  flex-direction: row;
  height: 80rpx;
  align-items: center;
}

.swiper-tab-item {
  display: flex;
  flex: 1;
  height: 100%;
  text-align: center;
  justify-content: center;
  align-items: center;
  color: gray;
  border-bottom: 6rpx solid #fff;
}

.swiper-tab-itemon {
  display: flex;
  flex: 1;
  height: 100%;
  color: #fb488e;
  justify-content: center;
  align-items: center;
  border-bottom: 6rpx solid #fb488e;
}

.diviline-co {
  width: 3rpx;
  color: gainsboro;
}

.swiper {
  display: flex;
  flex: 1;
  height: 100%;
}

.swiper-item {
  display: flex;
  flex: 1;
  width: 100%;
  height: 100%;
  background-color: red;
}

.scroll-view {
  height: 100%;
  width: 100%;
  border-top: 20rpx solid #f8f8f8;
}

/**
*去掉scrollview 的滚动条
*/

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.order {
  display: flex;
  flex: 1;
  width: 100%;
  flex-direction: column;
  border-bottom: 20rpx solid #f8f8f8;
}

.order-item-title {
  display: flex;
  flex: 1;
  height: 100rpx;
  align-items: center;
  margin-left: 20rpx;
  margin-right: 20rpx;
  justify-content: space-between;
  border-bottom: 3rpx solid gainsboro;
}

.order-item-title text {
  font-size: 30rpx;
  color: gray;
}

.order-item-center {
  display: flex;
  flex: 1;
  width: 100%;
  height: 140rpx;
  align-items: center;
  flex-direction: row;
  padding-left: 20rpx;
}

.order-item-center-img {
  display: flex;
  width: 80rpx;
  height: 80rpx;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  flex-direction: row;
  border-radius: 10rpx;
  border: 3rpx solid gainsboro;
}

.order-item-center-img image {
  width: 50rpx;
  height: 70rpx;
}

.order-item-root-view {
  flex: 1;
  display: flex;
  height: 100rpx;
  align-items: center;
  border-top: 3rpx solid gainsboro;
  margin-left: 20rpx;
  margin-right: 20rpx;
  justify-content: space-between;
}

.order-item-root-view text {
  font-size: 30rpx;
  color: gray;
}

.order-item-again {
  display: flex;
  border-radius: 30rpx;
  height: 60rpx;
  width: 160rpx;
  font-size: 30rpx;
  justify-content: center;
  align-items: center;
  color: gray;
  border: 3rpx solid gray;
}
