<view style="height:100rpx;padding-top:50rpx;">
  <view class="header" style="height:100rpx;padding-top:50rpx;background-color: rgb(204, 183, 192);">
    <view wx:if="{{showIcon}}" class="title-bar">
      <view class="back" bindtap="headerBack"><image src="./img/left.png"></image></view>
      <view class="line"></view>
      <view class="home" bindtap="headerHome"><image src="./img/home.png"></image></view>
    </view>
    <view wx:if="{{showTitle}}" class="header-title" style="color: rgb(15, 3, 3);">{{title}}</view>
		<view wx:if="{{showSearch}}" class="search-box" bindtap="headerSearch"><image src="./img/search.png" ></image><text>搜索食材</text></view>
  </view>
