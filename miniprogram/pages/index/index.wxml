
<!-- 搜索框 -->
<view class="search">
  <input placeholder="请输入要搜索的商品" placeholder-style="color:#ff6801" bindblur="search" ></input>
  <!-- <image src="cloud://test-rvwwd.7465-test-rvwwd-1301656814/img/tubiao/search.png" style="width:50rpx;height:50rpx"></image> -->
  <text bindtap="search_1" class="iconfont icon-sousuokuang"></text>
</view>

<view class="list" wx:for="{{search}}" wx:key="_id">
  <navigator class="list_1" url="../product_detail/product_detail?id={{item._id}}">
    <image src="{{item.img[0]}}" style="width:100rpx;height:100rpx;margin-left: 10rpx;"></image>
    <view>商品：{{item.name}}</view>
    <view style="margin-right: 50rpx;">价格：{{item.price}}</view>
  </navigator>
  <view class="line"></view>
</view>

<!-- 分类模块 -->
<view class="fenlei" >
  <view class="fenlei_1" >
    <navigator  url="../product_fenlei/product_fenlei?name=单品" class="fenlei_2">
      <image src="cloud://cloud1-6gtiz48ybf23c5c5.636c-cloud1-6gtiz48ybf23c5c5-1306427100/danpin.png" style="width:80rpx;height:80rpx"></image>
    <button size="mini"  type="default">
      <text style="font-size:28rpx">单品</text>
    </button>
    </navigator>
  </view>

  <view class="fenlei_1">
    <navigator url="../product_fenlei/product_fenlei?name=套餐"  class="fenlei_2">
      <image src="cloud://cloud1-6gtiz48ybf23c5c5.636c-cloud1-6gtiz48ybf23c5c5-1306427100/taocan.png" style="width:80rpx;height:80rpx"></image>
    <button size="mini"  type="default">
      <text style="font-size:28rpx">套餐</text>
    </button>
    </navigator>
  </view>
  
  <view class="fenlei_1">
    <view  class="fenlei_2">
      <image src="cloud://cloud1-6gtiz48ybf23c5c5.636c-cloud1-6gtiz48ybf23c5c5-1306427100/kefu.png" style="width:80rpx;height:80rpx"></image>
    <button open-type="contact" size="mini"  type="default">
      <text style="font-size:28rpx">客服订制</text>
    </button>
    </view>
  </view>
  
</view>



<!-- 产品列表 -->
<view class="floor">
  <text mode="widthFix">热销榜单(套餐）</text>
</view>
<view class="product">
<view class="line"></view>
  <block wx:for="{{banner}}" wx:key="_id">
  <navigator class="product_1" url="../product_detail/product_detail?id={{item._id}}">
    <image src="{{item.img[0]}}" class="img"></image>
    <view class="product_2">
      <text style="font-size:12px;">Top{{index+1}} -- {{item.name}}</text>
      <text style="font-size:12px;">价格￥{{item.price}}</text>
      <text style="font-size:12px;font-weight: 200;">销量：{{item.sell}}</text>
    </view>
  </navigator>
  </block>
</view>



