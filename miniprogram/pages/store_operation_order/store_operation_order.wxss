/* pages/my_record/my_record.wxss */
page{
  background-color: rgb(233, 230, 230);
}
.container {
  width: 100%;
  background-color: #f5f5f5;
	overflow: hidden;
}


.status-box {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
}

.status-box .status-label {
  width: 150rpx;
  height: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #353535;
  box-sizing: border-box;
  position: relative;
}

.status-box .status-label.active {
  color: #b5272d;
  border-bottom: 6rpx solid #b5272d;
}

.status-box .status-label .red-dot {
  width: 16rpx;
  height: 16rpx;
  position: absolute;
  left: 125rpx;
  top: 20rpx;
  background-color: #b5272d;
  border-radius: 50%;
}

.no-order {
  width: 100%;

  text-align: center;
  background-color: #f5f5f5;
	box-sizing: border-box;
	padding-top: 88rpx;
}

.no-order-img {
  width: 220rpx;
  height: 220rpx;
  margin-bottom: -10rpx;
  margin-top: 30%;
}

.no-order .text {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

.order-list {
  width: 100%;
}

.order-list .a-order {
  width: 100%;
  background-color: #fff;
  margin-top: 20rpx;
}

.order-list .a-order .order-date {
  padding: 0 30rpx;
  height: 70rpx;
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #000;
  align-items: center;
}

.order-list .a-order .order-date .red {
  font-size: 26rpx;
  color: #b5272d;
}

.a-order  .goods-info, .goods-img-container {
  width: 100%;
  border-top: 1rpx solid #f5f5f5;
  padding: 16rpx 0 16rpx 0;
  display: flex;
  align-items: center;
  color: #333;
}

.xuanze{
  display: flex;
  width: 90%;
  height: 80rpx;
  flex-direction: row;
  align-items: center;
  align-self: center;
  justify-content: space-between;
  margin-top: 20rpx;
}
.xuanze_1{
  display: flex;
  width: 45%;
  height: 70rpx;
  flex-direction: row;
  align-items: center;
  align-self: center;
  justify-content: center;
  border: 1px solid slategray;
  border-radius: 50rpx;
  background-color: #fff;
}

.order{
  display: flex;
  width: 96%;
  height: 300rpx;
  flex-direction: column;
  align-self: center;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border-radius: 20rpx;
  margin-top: 20rpx;
}


.order_1{
  display: flex;
  flex-direction: row;
  width: 80%;
  align-items: center;
  justify-content: space-between;
  height: 70rpx;
}

.order_2{
  display: flex;
  flex-direction: row;
  width: 80%;
  height: 230rpx;
  align-items: center;
}

.order_3{
  display: flex;
  height: 100rpx;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 50rpx;
}

.order_4{
  display: flex;
  width: 96%;
  height: 100rpx;
  flex-direction: row;
  align-self: center;
  align-items: center;
  justify-content: center;
  background-color: #ff8601;
  color: #fff;
  font-size: 18px;
  border-radius: 20rpx;
  margin-top: 20rpx;
}