.line{
  width: 100%;
  height: 5rpx;
  background-color: rgb(136, 135, 135);
  margin-bottom: 10rpx;
}

.star{
  margin-left: 40rpx;
  margin-right: -40rpx;
  margin-top: 0rpx;
  height: 50rpx;
  width: 50rpx;
  display: inline-block
}

.radio-group {
  border-bottom: 1px solid #ddd;
}

.radio {
  display: felx;
  border-top: 1px solid #ddd;
  padding: 5px;
}

.pic{
  float: left;
  width: 230rpx;
  height: 230rpx;
  border-radius: 0.2rem;
}


.store_detail_list{
  display: flex;
  width: 96%;
  height: 230rpx;
  margin: 10rpx;
  align-self: center;
  background-color: lightgray;
  border-radius: 10px;
}

.gotopay{
  font-size: 40rpx;
  position: relative;
  top: -50rpx;
  left: 100rpx;
}

.dis{
  margin-top: 10rpx;
  margin-left: -10rpx;
  display:inline-block;
  font-size: 30rpx;
  color: rgb(61, 61, 61);
}

.text_location{
  margin: 20rpx;
  font-size: 35rpx;
  float: left;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  width: 450rpx;
}